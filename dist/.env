<?php
/**
 * Environment Configuration Template
 * Copy this file to .env and fill in your cPanel database credentials
 * 
 * Location: public/.env
 * This file should NOT be committed to git (add to .gitignore)
 */

// Database Configuration
// Get these values from cPanel > MySQL Databases
define('DB_HOST', getenv('DB_HOST') ?: 'localhost');
define('DB_NAME', getenv('DB_NAME') ?: 'cpanel_breachtimes');
define('DB_USER', getenv('DB_USER') ?: 'cpanel_user');
define('DB_PASS', getenv('DB_PASS') ?: 'your_password_here');
define('DB_PORT', getenv('DB_PORT') ?: 3306);

// Application Environment
define('APP_ENV', getenv('APP_ENV') ?: 'production');
define('APP_DEBUG', getenv('APP_DEBUG') === 'true');

// API Configuration
define('API_BASE', getenv('API_BASE') ?: '/api');
define('ALLOWED_ORIGINS', getenv('ALLOWED_ORIGINS') ?: '*');

// File Upload Configuration
define('MAX_UPLOAD_SIZE', getenv('MAX_UPLOAD_SIZE') ?: 104857600); // 100MB
define('UPLOAD_PATH', getenv('UPLOAD_PATH') ?: __DIR__ . '/assets/uploads');

// Session Configuration
define('SESSION_LIFETIME', getenv('SESSION_LIFETIME') ?: 86400); // 24 hours
define('SESSION_SECURE', getenv('SESSION_SECURE') === 'true');
define('SESSION_HTTP_ONLY', getenv('SESSION_HTTP_ONLY') !== 'false');

// Error Logging
define('ERROR_LOG_PATH', getenv('ERROR_LOG_PATH') ?: __DIR__ . '/../error.log');

// Security
define('JWT_SECRET', getenv('JWT_SECRET') ?: 'change_me_in_production!');
define('CSRF_TOKEN_LENGTH', getenv('CSRF_TOKEN_LENGTH') ?: 32);
